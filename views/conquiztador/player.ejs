<%- include('../partials/header',{root:"../../"}); %>
    <title>Conquiztador - Host</title>
    <link rel="stylesheet" type="text/css" href="/css/conquiztador.css">
    </head>

    <body>
        <%- include('../partials/navbarlow'); %>

            <h1 class="text-center display-4">Game Code: <%= code %>
            </h1>

            <!-- Pseudo -->
            <div class="row">

                <div class="card col-4 mx-auto" id="user-card">
                    <div class="card-body">
                        <form action="" method="post" id="form-pseudo">
                            <div class="col-xs-4">
                                <input type="hidden" name="code" id="code" value=<%=code %>>
                                <label for="username" class="form-label ">Pseudo</label>
                                <input type="text" name="username" id="username" class="form-control" minlength="2"
                                    maxlength="20" placeholder="Saisir votre pseudo" pattern="[a-zA-Z0-9\s]+" required>
                            </div>
                            <button class="btn btn-primary" id="start" type="submit">Rejoindre la partie</button>
                        </form>
                    </div>
                </div>
            </div>


            <!-- App -->

            <div class="row" id="app-div-manche1" style="display: none;">

                <!-- Joueur 1-->
                <div class="col-3">
                    <div id="joueur1-div" class="mx-auto text-center pt-5" style="text-align:center;">
                        <div class="card mx-auto col-8">
                            <div class="card-header">
                                <h3 id="joueur1-name">Joueur 1</h3>
                            </div>
                            <div class="card-body" id="joueur1-score-div">

                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-6 mx-auto my-auto">
                    <div class="container">
                        <div class="row">
                            <h3 class="col-4 mx-auto text-center">Thème 1</h1>
                                <h3 class="col-4 mx-auto text-center">Thème 2</h1>
                                    <h3 class="col-4 mx-auto text-center">Thème 3</h1>
                        </div>
                        <div class="row">
                            <div class="col-4 block">3 cases</div>
                            <div class="col-4 block">3 cases</div>
                            <div class="col-4 block">3 cases</div>
                        </div>
                        <div class="row">
                            <div class="col-4 block">2 cases</div>
                            <div class="col-4 block">2 cases</div>
                            <div class="col-4 block">2 cases</div>
                        </div>
                        <div class="row">
                            <div class="col-4 block">1 case</div>
                            <div class="col-4 block">1 case</div>
                            <div class="col-4 block">1 case</div>
                        </div>
                    </div>

                </div>

                <!-- Joueur 2-->
                <div class="col-3">
                    <div id="joueur2-div" class="mx-auto text-center pt-5" style="text-align:center;">
                        <div class="card mx-auto col-8">
                            <div class="card-header" id="joueur2-name">
                                <h3>Joueur 2</h3>
                            </div>
                            <div class="card-body" id="joueur2-score-div">

                            </div>
                        </div>
                    </div>

                </div>


            </div>


            <div class="alert alert-success mt-5" style="display: none;" id="success-alert">

            </div>


            <div class="row" id="spec-message" style="display: none;">
                <h2>Tu es spectateur</h2>
            </div>

            <div class="modal fade" id="modalQuestion" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="question-header" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title" id="question-header">Voici la question</h2>
                        </div>
                        <div class="modal-body">
                            <h3 id="question-div"></h3>
                        </div>
                    </div>
                </div>


                <%- include('../partials/script'); %>
                    <script src="/js/conquiztadorplayer.js"></script>
    </body>