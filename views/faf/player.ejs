<%- include('../partials/header',{root:"../../"}); %>
    <title>FAF - Player</title>
    </head>

    <body>
        <%- include('../partials/navbarlow'); %>

            <h1 class="text-center display-4">Game Code: <%= code %>
            </h1>
            <div class="row">

                <div class="card col-4 mx-auto" id="user-card">
                    <div class="card-body">
                        <form action="" method="post" id="form-pseudo">
                            <div class="col-xs-4">
                                <input type="hidden" name="code" id="code" value=<%=code %>>
                                <label for="username" class="form-label ">Pseudo</label>
                                <input type="text" pattern="[a-zA-Z0-9\s]+" name="" id="username" class="form-control" minlength="2"
                                    maxlength="20" placeholder="Saisir votre pseudo" required>
                            </div>
                            <button class="btn btn-primary" id="start" type="submit">Rejoindre la partie</button>
                        </form>
                    </div>
                </div>
            </div>

            

            <%- include('../partials/script'); %>
                <script src="/js/fafplayer.js"></script>
    </body>