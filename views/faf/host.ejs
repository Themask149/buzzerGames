                </div>

                <!-- Joueur 2-->
                <div class="col-4">
                    <div id="joueur2-div" class="mx-auto text-center pt-5" style="text-align:center;">
                        <div class="card mx-auto col-8">
                            <div class="card-header"id="joueur2-name">
                                <h3>Joueur 2</h3>
                            </div>
                            <div class="card-body" id="joueur2-score-div">
                                
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="row">
                    <div id="buttons" class="mx-auto my-2 text-center border-right col-6"
                            style=" border-right: 1px solid #ccc;">
                            <h2>Commandes</h2>
                            <button type="button" class="btn btn-warning" id="Faux">Faux (F ou suppr)</button>
                            <button type="button" class="btn btn-success" id="Vrai">Vrai (V ou espace)</button>
                            <div class="row" id="start-timer" >
                            <button type="button" class="btn btn-danger" id="Start">Start</button>
                            
                        </div>
                    <div id="spectateurs-div " class="mx-auto text-center col-6 pt-5" style="text-align:center;">
                        <div class="card mx-auto col-8">
                            <div class="card-header">
                                Liste des spectateurs
                            </div>
                            <div class="card-body">
                                <ul class="list-group" id="spectateurs-list">
        
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

           


             <!-- Validate points -->
             <div class="modal fade" id="modalGivePoints" data-bs-backdrop="static" data-bs-keyboard="false"
             tabindex="-1" aria-labelledby="pseudo-modal" aria-hidden="true">
             <div class="modal-dialog">
                 <div class="modal-content">
                     <div class="modal-header">
                         <h5 class="modal-title " id="pseudo-modal">Valider la réponse</h5>
                     </div>
                     <div class="modal-body">
                         <label for="score" class="form-label" id="modal-score-label">Donnez des points pour la réponse :</label>
                     <input type="number" name="score" id="score-input" class="form-control" placeholder="Nombre de points" pattern="[0-9\s]+" required>
                     </div>
                     <div class="modal-footer">
                         <button type="button" class="btn btn-secondary" id="btn-validate" data-bs-dismiss="modal">Valider</button>
                     </div>
                 </div>
             </div>
         </div>
 


 <%- include('../partials/script'); %>
 <script src="/js/fafhost.js"></script>
</body>